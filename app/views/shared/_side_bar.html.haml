.side-bar
  .side-header
    %p.side-header__user-name 
      = current_user.name
    %ul.user-menu
      %li.user-menu__new-group
        = link_to new_group_path do
          = fa_icon 'pencil-square-o fw', class: 'icon'
          
      %li.user-menu__edit-user
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog fw', class: 'icon'
  .groups
    .group
      %p.group__group-name Sample group name
      %p.group__latest-message Sample message
        